<div class="container">
	<h1>Email collect</h1>
	<div class="row">
		<div class="col-md-6">
			<%= form_tag 'parse_emails' do |f|  %>
				<%= text_area_tag :text, @text , rows: 20, cols: 60 %>
				<%= submit_tag 'Parse text',class: "btn btn-primary" %>
			<% end %>
		</div>
		<div class="col-md-6">
			<% @emails.each do |email| %>
				<%= email.email %></br>
			<% end %>
		</div>
	</div>
</div>
	










